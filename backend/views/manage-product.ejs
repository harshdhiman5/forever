<!DOCTYPE html>
<html>
<head>
  <title>Manage Products</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h2>All Products</h2>
    <a href="/insert-product" class="btn btn-success mb-3">Add New Product</a>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Image</th>
          <th>Title</th>
          <th>Price</th>
          <th>Category</th>
          <th>Type</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach(product => { %>
          <tr>
            <td><img src="/<%= product.image %>" width="70" /></td>
            <td><%= product.title %></td>
            <td>â‚¹<%= product.price %></td>
            <td><%= product.category %></td>
            <td><%= product.type %></td>
            <td>
              <a href="/edit-product/<%= product._id %>" class="btn btn-warning btn-sm">Edit</a>
              <form action="/delete-product/<%= product._id %>" method="POST" style="display:inline-block">
                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Delete this product?')">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
